{
    "version": 2,
    "builds": [
        {
            "src": "mi_erp/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "15mb", "runtime": "python3.12" }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "mi_erp/wsgi.py"
        }
    ]
}
